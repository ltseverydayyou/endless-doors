local Notification = loadstring(game:HttpGet("https://raw.githubusercontent.com/ltseverydayyou/Nameless-Admin/main/notifications"))();
 local Notify = Notification.Notify;

local curroom = game.workspace.Game.Values.RoomsNumber.Value
local rmMain=curroom
local rmOld
if workspace.Game.Rooms:FindFirstChild("Room"..rmMain - 5) then
    rmOld=curroom - 5
elseif workspace.Game.Rooms:FindFirstChild("Room"..rmMain - 4) then
    rmOld=curroom - 4
elseif workspace.Game.Rooms:FindFirstChild("Room"..rmMain - 3) then
    rmOld=curroom - 3
else
    rmOld=curroom - 2
end
if (workspace.Game.Rooms:FindFirstChild("Room"..rmMain - 5) or workspace.Game.Rooms:FindFirstChild("Room"..rmMain -4) or workspace.Game.Rooms:FindFirstChild("Room"..rmMain -3) or workspace.Game.Rooms:FindFirstChild("Room"..rmMain -2)) then
if workspace.Game.Rooms["Room"..rmOld].Models:FindFirstChild("Wardrobe") then
    game:GetService("Players").LocalPlayer.Character:PivotTo(workspace.Game.Rooms["Room"..rmMain].Door:GetPivot())
    
    pcall(function()
    for i=1, 15 do
        task.wait(0.05)
        fireproximityprompt(workspace.Game.Rooms["Room"..rmMain].Door.Handle:FindFirstChildOfClass("ProximityPrompt"),math.huge)
    end
    end)
    
    wait(0.5);
    
    local args = {
        workspace.Game.Rooms["Room"..rmOld].Models.Wardrobe,
        false,
        false
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("HIDE"):FireServer(unpack(args))
    wait(1);
    spawn(function()

    repeat wait() until game:GetService("Players").LocalPlayer.Character:FindFirstChild("Hiding").Value == true

    repeat task.wait(.1)
        game:GetService("Players").LocalPlayer.Character:PivotTo(workspace.Game.Rooms["Room"..rmMain].Door:GetPivot())
    until game:GetService("Players").LocalPlayer.Character:FindFirstChild("Hiding").Value == false
    
    end)
    task.wait(3.5);
    game:GetService("Players").LocalPlayer.Character:FindFirstChild("Hiding").Value = false

    else

    Notify({
    Description = "no wardrobe found, open a few more doors";
    Title = "uh oh";
    Duration = 5;
    });
 end

	else

	Notify({
    Description = "open a few doors for this to work";
    Title = "uh oh";
    Duration = 3;
    });

end
