local Notification = loadstring(game:HttpGet("https://raw.githubusercontent.com/ltseverydayyou/Nameless-Admin/main/notifications"))();
 local Notify = Notification.Notify;

local curroom = game.workspace.Game.Values.RoomsNumber.Value
local rmMain=curroom
local rmOld=curroom - 4

if workspace.Game.Rooms:FindFirstChild("Room"..rmMain - 4) then
if workspace.Game.Rooms["Room"..rmOld].Models:FindFirstChild("Wardrobe") then
    game:GetService("Players").LocalPlayer.Character.HumanoidRootPart.CFrame = workspace.Game.Rooms["Room"..rmMain].Door:FindFirstChildOfClass("Part").CFrame
    
    task.spawn(function()
    for i = 1, 10 do
        task.wait(0.05)
        fireproximityprompt(workspace.Game.Rooms["Room"..rmMain].Door.Handle.ProximityPrompt)
    end
    end)
    
    task.wait(0.5);
    
    local args = {
        workspace.Game.Rooms["Room"..rmOld].Models.Wardrobe,
        false,
        false
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("HIDE"):FireServer(unpack(args))
    task.wait(1);
    task.spawn(function()

    repeat wait() until game:GetService("Players").LocalPlayer.Character:FindFirstChild("Hiding").Value == true

    repeat task.wait(.1)
    game:GetService("Players").LocalPlayer.Character.HumanoidRootPart.CFrame = workspace.Game.Rooms["Room"..rmMain].Door:FindFirstChildOfClass("Part").CFrame
    until game:GetService("Players").LocalPlayer.Character:FindFirstChild("Hiding").Value == false
    
    end)
    task.wait(2.5);
    game:GetService("Players").LocalPlayer.Character:FindFirstChild("Hiding").Value = false

    else

    Notify({
    Description = "no wardrobe found, open a few more doors";
    Title = "uh oh";
    Duration = 5;
    });
 end

	else

	Notify({
    Description = "open a few doors for this to work";
    Title = "uh oh";
    Duration = 3;
    });

end
